{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 820,
  "height": 520,
  "projection": {
    "type": "equalEarth",
    "fit": { "data": { "url": "data/au-states.json", "format": { "type": "topojson", "feature": "au-states.topo" } } }
  },
  "layer": [
    {
      "data": { "graticule": { "step": [20, 20] } },
      "mark": { "type": "geoshape", "stroke": "#dde6ee", "strokeWidth": 0.6 }
    },
    {
      "data": {
        "url": "data/au-states.json",
        "format": { "type": "topojson", "feature": "au-states.topo" }
      },
      "transform": [
        {
          "filter": {
            "field": "properties.name",
            "oneOf": [
              "New South Wales",
              "Victoria",
              "Queensland",
              "South Australia",
              "Western Australia",
              "Tasmania",
              "Northern Territory",
              "Australian Capital Territory"
            ]
          }
        },
        {
          "lookup": "properties.name",
          "from": {
            "data": { "url": "data/au-pt-commuting-2021.csv" },
            "key": "state_name",
            "fields": ["pct_pt", "pt_commuters", "total_commuters"]
          }
        },
        { "calculate": "isValid(datum.pct_pt) ? datum.pct_pt : 0", "as": "pct_safe" }
      ],
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.8 },
      "encoding": {
        "color": {
          "field": "pct_safe",
          "type": "quantitative",
          "title": "% commuters using public transport",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "properties.name", "title": "State/Territory" },
          { "field": "pt_commuters", "title": "PT commuters" },
          { "field": "total_commuters", "title": "Total commuters" },
          { "field": "pct_pt", "title": "% PT (raw)", "format": ".1f" },
          { "field": "pct_safe", "title": "% PT (shown)", "format": ".1f" }
        ]
      }
    }
  ],
  "config": { "view": { "stroke": null }, "legend": { "titleLimit": 300 } }
}
