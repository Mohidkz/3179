{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 520,
  "projection": { "type": "mercator", "center": [134, -28.5], "scale": 800 },
  "layer": [
    { "data": { "graticule": "sphere" }, "mark": { "type": "geoshape", "fill": "#e6f0f8" } },
    { "data": { "graticule": { "step": [30, 30] } }, "mark": { "type": "geoshape", "stroke": "#cdd6de", "strokeWidth": 0.6 } },
    {
      "data": { "url": "data/au-states.json", "format": { "type": "topojson", "feature": "states" } },
      "transform": [
        {
          "filter": {
            "field": "properties.name",
            "oneOf": [
              "New South Wales","Victoria","Queensland","South Australia",
              "Western Australia","Tasmania","Northern Territory","Australian Capital Territory"
            ]
          }
        },
        {
          "lookup": "properties.name",
          "from": { "data": { "url": "data/au-pt-commuting-2021.csv" }, "key": "state_name",
            "fields": ["pct_pt","pt_commuters","total_commuters"] }
        },
        { "calculate": "isValid(datum.pct_pt) ? toNumber(datum.pct_pt) : 0", "as": "pct_safe" }
      ],
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 1 },
      "encoding": {
        "color": { "field": "pct_safe", "type": "quantitative", "title": "% of employed commuters using PT",
          "scale": { "scheme": "blues" },
          "legend": { "orient": "bottom", "direction": "horizontal", "columns": 4, "titleLimit": 360 } },
        "tooltip": [
          { "field": "properties.name", "title": "State/Territory" },
          { "field": "pt_commuters", "title": "PT commuters", "format": "," },
          { "field": "total_commuters", "title": "Total commuters", "format": "," },
          { "field": "pct_safe", "title": "% using PT", "format": ".1f" }
        ]
      }
    }
  ],
  "config": { "view": { "stroke": null } }
}
