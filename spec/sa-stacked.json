{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Adelaide monthly mode mix with interactive filters.",
  "width": "container",
  "height": 462,
  "autosize": { "type": "fit", "contains": "padding" },

  "data": { "url": "data/sa-monthly-mode-share.csv" },

  "params": [
    {
      "name": "modeSelect",
      "select": { "type": "point", "fields": ["mode"] },
      "bind": "legend"
    }
  ],

  "transform": [
    { "calculate": "toDate(datum.month)", "as": "date" }
  ],

  "mark": { "type": "bar", "cornerRadiusEnd": 3 },

  "encoding": {
    "x": {
      "field": "date",
      "timeUnit": "yearmonth",
      "type": "ordinal",
      "title": "Month (2021 Q1)",
      "axis": { "format": "%b", "labelAngle": 0 },
      "scale": { "paddingInner": 0.3, "paddingOuter": 0.2 }
    },
    "y": {
      "field": "validations",
      "type": "quantitative",
      "stack": "normalize",
      "title": "Share of Taps",
      "axis": { "format": ".0%" }
    },
    "color": {
      "field": "mode",
      "type": "nominal",
      "scale": {
        "domain": ["Train", "Bus", "Tram"],
        "range": ["#00529b", "#187a41", "#e67e22"]
      },
      "legend": {
        "title": "Filter by Mode",
        "orient": "top",
        "direction": "horizontal"
      }
    },
    "opacity": {
      "condition": { "param": "modeSelect", "value": 1 },
      "value": 0.2
    },
    "tooltip": [
      { "field": "date", "timeUnit": "yearmonth", "title": "Month" },
      { "field": "mode" },
      { "field": "validations", "title": "Taps (band floors)", "format": "," }
    ]
  },

  "config": { "view": { "stroke": null } }
}
