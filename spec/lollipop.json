{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 360,
  "data": { "url": "data/au-pt-commuting-2021.csv" },
  "params": [
    {
      "name": "pct_threshold",
      "value": 2.5,
      "bind": {
        "input": "range",
        "min": 2.5,
        "max": 7.5,
        "step": 0.1,
        "name": "Minimum % Using PT: "
      }
    }
  ],
  "transform": [
    { "calculate": "toNumber(datum.pct_pt)", "as": "pct" },
    { "filter": "datum.pct >= pct_threshold" },
    {
      "joinaggregate": [{ "op": "mean", "field": "pct", "as": "nat_avg" }]
    },
    {
      "window": [{ "op": "rank", "as": "r_desc" }],
      "sort": [{ "field": "pct", "order": "descending" }]
    },
    {
      "window": [{ "op": "rank", "as": "r_asc" }],
      "sort": [{ "field": "pct", "order": "ascending" }]
    }
  ],
  "encoding": {
    "y": {
      "field": "state_name",
      "type": "nominal",
      "sort": { "field": "pct", "order": "descending" },
      "title": "State / Territory"
    }
  },
  "layer": [
    {
      "mark": { "type": "rule", "strokeDash": [4, 4] },
      "encoding": {
        "x": { "field": "nat_avg", "type": "quantitative" },
        "color": { "value": "#94a3b8" }
      }
    },
    {
      "mark": { "type": "rule" },
      "encoding": {
        "x": { "field": "pct", "type": "quantitative" },
        "x2": { "value": 0 },
        "color": { "value": "#cfd8e3" }
      }
    },
    {
      "mark": { "type": "circle", "size": 140 },
      "encoding": {
        "x": {
          "field": "pct",
          "type": "quantitative",
          "title": "% of employed commuters using PT",
          "axis": { "format": ".1f" }
        },
        "color": { "value": "#4f9dda" },
        "tooltip": [
          { "field": "state_name", "title": "State/Territory" },
          { "field": "pct", "title": "% using PT", "format": ".1f" },
          { "field": "pt_commuters", "title": "PT commuters", "format": "," },
          { "field": "total_commuters", "title": "Total commuters", "format": "," }
        ]
      }
    },
    {
      "transform": [{ "filter": "datum.r_desc==1" }],
      "mark": { "type": "text", "dx": 8, "dy": -8, "fontSize": 12 },
      "encoding": {
        "x": { "field": "pct", "type": "quantitative" },
        "text": { "field": "state_name" }
      }
    },
    {
      "transform": [{ "filter": "datum.r_asc==1" }],
      "mark": { "type": "text", "dx": 8, "dy": 12, "fontSize": 12 },
      "encoding": {
        "x": { "field": "pct", "type": "quantitative" },
        "text": { "field": "state_name" }
      }
    }
  ]
}

